#main
  //video header and navigation divs.
  .video-container#header
    video(autoplay=true, height="720", loop=true, poster="static/img/wine.jpg", width="1280")
      source(src="static/video/mp4/wine.mp4" type="video/mp4")
      source(src="static/video/webm/wine.webm" type="video/webm")
  .container-fluid.no-padding.no-margin.relative.h-100#home
    nav.fixed.top.right.navigation.white-text.row.full-width.up#navigation
      .col-12
        ul.list-inline.float-right
          li.list-inline-item
            a(href="#header") Inicio
          li.list-inline-item
            a(href="#menu") Servicios
          li.list-inline-item
            a(href="#gallery") Galeria
          li.list-inline-item
            a(href="#contact-form") Contacto
          li.list-inline-item
            a(href="#location") Como llegar
    .row.no-padding.h-100
      .white-text.col-12.h-100.no-padding.text-center#parent
        .h-100#child
          img(src="static/img/logo.png" width="200")
