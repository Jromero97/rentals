  // Contact form to send email for more information. TODO: Add facebook API support
  .black.white-text.full-height.container-fluid.no-padding#contact-form
    .row.full-height
      .col-12.contact-wrap.no-padding
        .form-wrapper
          .form-div
            form#form
              .input-wrap
                input(type="text", name="name", placeholder="Nombre *", maxlength="33", required=true).feedback-input
                input(type="tel", name="phone", placeholder="Telefono *", maxlength="33", required=true).feedback-input
              input(type="email", name="email", placeholder="Correo *" maxlength="99" required=true).feedback-input
              textarea(name="message", placeholder="Mensaje *", maxlength="999" required=true).feedback-input.message
              button(type="submit").send-button Contactanos!

